#include <iostream>
#include <cmath>
#include <iomanip>

 using namespace std;
 double pi = 3.14159, r, v;
 
double raio() {
 	cin >> r;
 	return(r);

}

double volume (){
	v = (4/ 3.0) * pi * pow (r,3);
	return(v);
		
} 

void saida(){
	cout << fixed << setprecision(3);
	cout << "VOLUME = "<< v << endl;
	
	}
	
int main(){
	raio();
	volume();
	saida();
	
	return 0; 
	
}	
